<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.assignment.HCI.limko.ContactActivity"
    android:background="#ff161616"
    android:theme="@android:style/ThemeOverlay.Material.Dark">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CALL US"
        android:id="@+id/btn_call"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff1f1f1f"
        android:backgroundTint="#fff7f7f7"
        android:backgroundTintMode="add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+(603) 8317 8888"
        android:id="@+id/textView14"
        android:layout_above="@+id/btn_call"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cyberjaya Campus "
        android:id="@+id/textView15"
        android:layout_above="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:textColor="#ffffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact Info"
        android:id="@+id/textView16"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/textView15"
        android:layout_alignParentStart="true"
        android:background="@mipmap/limkocampus"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:id="@+id/btn_facebook"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff1f1f1f"
        android:backgroundTint="#fff7f7f7"
        android:backgroundTintMode="add" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:id="@+id/btn_twitter"
        android:layout_above="@+id/btn_facebook"
        android:layout_centerHorizontal="true"
        android:textColor="#ff1f1f1f"
        android:backgroundTint="#fff7f7f7"
        android:backgroundTintMode="add" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Offical website"
        android:id="@+id/btn_web"
        android:layout_above="@+id/btn_twitter"
        android:layout_centerHorizontal="true"
        android:textColor="#ff1f1f1f"
        android:backgroundTint="#fff7f7f7"
        android:backgroundTintMode="add" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/loc"
        android:textColor="#ff1f1f1f"
        android:backgroundTint="#fff7f7f7"
        android:backgroundTintMode="add"
        android:layout_below="@+id/btn_facebook"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
