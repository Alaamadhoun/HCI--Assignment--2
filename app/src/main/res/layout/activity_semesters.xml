<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.assignment.HCI.limko.SemestersActivity"
    android:clickable="true"
    android:background="@mipmap/bg3">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Semester 1"
        android:id="@+id/Semester1"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/Semester2"
        android:textColor="#ff161616" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Semester 2"
        android:id="@+id/Semester2"
        android:layout_below="@+id/Semester1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#ff161616" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Semester 3"
        android:id="@+id/Semester3"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#ff161616"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Semester2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Semester 4"
        android:id="@+id/Semester4"
        android:layout_alignStart="@+id/Semester3"
        android:layout_below="@+id/Semester3"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#ff161616" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Semester 5"
        android:id="@+id/Semester5"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#ff161616"
        android:layout_below="@+id/textView20"
        android:layout_alignStart="@+id/Semester6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Semester 6"
        android:id="@+id/Semester6"
        android:layout_below="@+id/Semester5"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#ff161616" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CHOOSE SEMESTER"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Year 1"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Year 2"
        android:id="@+id/textView19"
        android:layout_above="@+id/Semester3"
        android:layout_centerHorizontal="true"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Year 3"
        android:id="@+id/textView20"
        android:layout_below="@+id/Semester4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="45dp" />

</RelativeLayout>
