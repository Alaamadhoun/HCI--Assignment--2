<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.assignment.HCI.limko.Activity1"
    android:theme="@android:style/ThemeOverlay.Material.Dark"
    android:background="@mipmap/bg1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/btn_camera"
        android:textColor="#ff1f1f1f"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:backgroundTintMode="add"
        android:backgroundTint="#ffeaeaea"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="     "
        android:id="@+id/textView9"
        android:textColor="#ffffffff"
        android:layout_below="@+id/btn_courses"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Modules"
        android:id="@+id/btn_courses"
        android:textColor="#ff1f1f1f"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:backgroundTint="#ffeaeaea"
        android:backgroundTintMode="add"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  "
        android:id="@+id/textView10"
        android:textColor="#ffffffff"
        android:layout_below="@+id/btn_image"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Images"
        android:id="@+id/btn_image"
        android:layout_below="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#ffeaeaea"
        android:backgroundTintMode="add"
        android:textColor="#ff1f1f1f"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   "
        android:id="@+id/textView11"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/btn_contact"
        android:textColor="#ff1f1f1f"
        android:layout_above="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#ffeaeaea"
        android:backgroundTintMode="add"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="    "
        android:id="@+id/textView12"
        android:layout_above="@+id/btn_contact"
        android:layout_alignStart="@+id/textView13" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BIT Modules"
        android:id="@+id/btn_timetable"
        android:textColor="#ff1f1f1f"
        android:layout_above="@+id/textView12"
        android:layout_alignParentStart="true"
        android:backgroundTint="#ffeaeaea"
        android:backgroundTintMode="add"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   "
        android:id="@+id/textView13"
        android:layout_above="@+id/btn_timetable"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FICT"
        android:id="@+id/textView2"
        android:textColor="#ff1f1f1f"
        android:textSize="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutUS"
        android:background="@mipmap/iconuser"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="70dp"
        android:paddingBottom="34dp"/>

</RelativeLayout>
